@page
@model BookList.Pages.BookListModel

<br/>
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control">Create New Book</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().bookName">Name</label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().authorName">Author</label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().genre">Genre</label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().famousQuote">Quote</label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().yearRelease">Release Year</label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.bookName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.authorName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.genre)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.famousQuote)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.yearRelease)
                    </td>
                    <td>
                        <a asp-page="OverView" asp-route-id="@item.idBook" class="btn-primary btn-sm">See More</a>
                        <a asp-page="Edit" asp-route-id="@item.idBook" class="btn btn-success btn-sm">Edit</a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p>No books avaliable.</p>
            }
        </form>
    </div>
    <div class="col-12" style="text-align:center;">
        <br />
        <span class="h3 text-info">OR</span>
        <br />
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Quote</th>
                    <th>Release Year</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts{ 
    <script src="~/js/bookList.js"></script>
}